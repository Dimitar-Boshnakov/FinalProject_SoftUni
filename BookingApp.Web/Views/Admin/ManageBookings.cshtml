﻿@using BookingApp.Web.ViewModels.Models.Booking;
@model IEnumerable<BookingViewModel>

<h1>All Bookings</h1>

<table>
    <thead>
        <tr>
            <th>Property Name</th>
            <th>User</th>
            <th>Arrival Date</th>
            <th>Leave Date</th>
            <th>Paid</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.PropertyName</td>
                <td>@booking.ArrivalDate.ToShortDateString()</td>
                <td>@booking.LeaveDate.ToShortDateString()</td>
                <td>@(booking.IsPaid ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>