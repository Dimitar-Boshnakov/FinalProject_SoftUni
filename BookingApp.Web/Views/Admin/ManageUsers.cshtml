@using BookingApp.Web.ViewModels.Models.Users;
@model IEnumerable<UserViewModel>

<h1>All Users</h1>

<table>
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <form asp-action="ChangeRole" asp-route-id="@user.Id" asp-route-role="Admin" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-warning">Promote to Admin</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
